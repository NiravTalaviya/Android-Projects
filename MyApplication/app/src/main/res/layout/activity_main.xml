<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>
    <include layout="@layout/content_main" />

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/relative_top_margin">
    <Button
        android:id="@+id/seven"
        android:layout_width="@dimen/normal_button_width"
        android:layout_height="@dimen/normal_button_height"
        android:layout_marginTop="@dimen/top_margin"
        android:layout_marginLeft="@dimen/margin_left"
        android:text="7" />

    <Button
        android:id="@+id/eight"
        android:layout_width="@dimen/normal_button_width"
        android:layout_height="@dimen/normal_button_height"
        android:layout_marginTop="@dimen/top_margin"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_toRightOf="@+id/seven"
        android:text="8" />

    <Button
        android:id="@+id/nine"
        android:layout_width="@dimen/normal_button_width"
        android:layout_height="@dimen/normal_button_height"
        android:layout_toRightOf="@+id/eight"
        android:layout_marginTop="@dimen/top_margin"
        android:layout_marginLeft="@dimen/margin_left"
        android:text="9" />
    <Button
        android:id="@+id/answer"
        android:layout_width="@dimen/normal_button_width"
        android:layout_height="@dimen/equal_height"
        android:layout_toRightOf="@+id/nine"
        android:layout_marginTop="@dimen/top_margin"
        android:layout_marginLeft="@dimen/margin_left"
        android:text="=" />

    <Button
        android:id="@+id/four"
        android:layout_width="@dimen/normal_button_width"
        android:layout_height="@dimen/normal_button_height"
        android:layout_marginTop="@dimen/top_margin"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_below="@+id/seven"
        android:text="4" />

    <Button
        android:id="@+id/five"
        android:layout_width="@dimen/normal_button_width"
        android:layout_height="@dimen/normal_button_height"
        android:layout_marginTop="@dimen/top_margin"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_toRightOf="@+id/seven"
        android:layout_below="@+id/eight"
        android:text="5" />

    <Button
        android:id="@+id/six"
        android:layout_width="@dimen/normal_button_width"
        android:layout_height="@dimen/normal_button_height"
        android:layout_toRightOf="@+id/eight"
        android:layout_marginTop="@dimen/top_margin"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_below="@+id/nine"
        android:text="6" />


    <Button
        android:id="@+id/one"
        android:layout_width="@dimen/normal_button_width"
        android:layout_height="@dimen/normal_button_height"
        android:layout_marginTop="@dimen/top_margin"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_below="@+id/four"
        android:text="1" />

    <Button
        android:id="@+id/two"
        android:layout_width="@dimen/normal_button_width"
        android:layout_height="@dimen/normal_button_height"
        android:layout_marginTop="@dimen/top_margin"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_toRightOf="@+id/seven"
        android:layout_below="@+id/five"
        android:text="2" />

    <Button
        android:id="@+id/three"
        android:layout_width="@dimen/normal_button_width"
        android:layout_height="@dimen/normal_button_height"
        android:layout_toRightOf="@+id/eight"
        android:layout_marginTop="@dimen/top_margin"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_below="@+id/six"
        android:text="3" />

    <Button
        android:id="@+id/zero"
        android:layout_width="@dimen/normal_button_width"
        android:layout_height="@dimen/normal_button_height"
        android:layout_marginTop="@dimen/top_margin"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_below="@+id/one"
        android:text="0" />

    <Button
        android:id="@+id/dot"
        android:layout_width="@dimen/normal_button_width"
        android:layout_height="@dimen/normal_button_height"
        android:layout_marginTop="@dimen/top_margin"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_toRightOf="@+id/seven"
        android:layout_below="@+id/two"
        android:text="." />

    <Button
        android:id="@+id/ac"
        android:layout_width="@dimen/normal_button_width"
        android:layout_height="@dimen/normal_button_height"
        android:layout_toRightOf="@+id/eight"
        android:layout_marginTop="@dimen/top_margin"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_below="@+id/three"
        android:text="AC" />

    <Button
        android:id="@+id/c"
        android:layout_width="@dimen/normal_button_width"
        android:layout_height="@dimen/normal_button_height"
        android:layout_toRightOf="@+id/ac"
        android:layout_marginTop="@dimen/top_margin"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_below="@+id/three"
        android:text="c" />


    <Button
        android:id="@+id/add"
        android:layout_width="@dimen/normal_button_width"
        android:layout_height="@dimen/normal_button_height"
        android:layout_marginTop="@dimen/top_margin"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_below="@+id/zero"
        android:text="+" />

    <Button
        android:id="@+id/sub"
        android:layout_width="@dimen/normal_button_width"
        android:layout_height="@dimen/normal_button_height"
        android:layout_marginTop="@dimen/top_margin"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_below="@+id/dot"
        android:layout_toRightOf="@+id/one"
        android:text="-" />

    <Button
        android:id="@+id/mul"
        android:layout_width="@dimen/normal_button_width"
        android:layout_height="@dimen/normal_button_height"
        android:layout_marginTop="@dimen/top_margin"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_toRightOf="@+id/dot"
        android:layout_below="@+id/ac"
        android:text="*" />

    <Button
        android:id="@+id/div"
        android:layout_width="@dimen/normal_button_width"
        android:layout_height="@dimen/normal_button_height"
        android:layout_toRightOf="@+id/ac"
        android:layout_marginTop="@dimen/top_margin"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_below="@+id/c"
        android:text="/" />
</RelativeLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="340dp"
        android:layout_height="25dp"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="20dp"
        android:text="0"
        android:textSize="20dp"
        android:gravity="end" />
</android.support.design.widget.CoordinatorLayout>